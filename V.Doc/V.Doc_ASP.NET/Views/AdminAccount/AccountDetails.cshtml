@model V.Doc_ASP.NET.Models.CustomModel.AdminModel

@{
    ViewBag.Title = "AccountDetails";
}

<h2>AccountDetails</h2>

<div>
    <h4>AdminModel</h4>
    <hr />
    <div class="box box-primary">
        <div class="box-body box-profile">
            <img src="@Url.Content(Model.ProfilePicture)" class="profile-user-img img-responsive img-circle" alt="User profile picture" width="100" height="100" />
            <h3 class="profile-username text-center">@Model.FirstName  @Model.LastName</h3>

            <p class="text-muted text-center">@Model.Type</p>

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Email)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Birthdate)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Birthdate)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Age)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Age)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Gender)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Gender)
                </dd>
            </dl>

            <input type="button" value="Edit Profile" class="btn btn-primary btn-block" onclick="location.href='@Url.Action("EditProfile", "AdminAccount")'">
            <input type="button" value="Change Password" class="btn btn-primary btn-block" onclick="location.href='@Url.Action("EditPassword", "AdminAccount")'">
        </div>
        <!-- /.box-body -->
    </div>
</div>


@section UserImage{
<img src="@Url.Content(Model.ProfilePicture)" class="img-circle" alt="User Image">

 } 



