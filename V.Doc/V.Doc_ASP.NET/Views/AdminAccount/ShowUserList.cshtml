@model V.Doc_ASP.NET.Models.CustomModel.ShowUserListModel
@using V.Doc_Utilities
@{
    ViewBag.Title = "ShowUserList";
    Layout = "~/Views/Shared/Admin_MainLayout.cshtml";
}
@using V.Doc_Entity;
<h2>ShowUserList</h2>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />


<div class="container" style="margin-top:3%">
    <a href="#" class="btn btn-info" onclick="AddNewStudent(0)">Add New Student</a> <br /><br />
    <a href="#" class="btn btn-info" onclick="AddNewStudent(0)">Add New Student</a> <br /><br />

    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
            <input type="text" id="Search" class="form-control" />
        </div>
        <div class="form-group">
            <select id="SearchBy">
                <option value="FirstName">First Name</option>
                <option value="LastName">Last Name</option>
                <option value="Gender">Gender</option>
                <option value="Type">Type</option>
            </select>
        </div>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Age</th>
                <th>Gender</th>
                <th>Type</th>
                <th>Action(Edit)</th>
                <th>Action(Delete)</th>
            </tr>
        </thead>
        <tbody id="list">
            <tr id="LoadingStatus" style="color:red"></tr>
        </tbody>
    </table>

    @*Create A Popup Modal With Registration Form For Add Or Edit Student Record*@

    <div class="modal fade" id="MyModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    <h4 id="ModalTitle"></h4>
                </div>
                <div class="modal-body">
                    <form id="form">
                        <fieldset id="SubmitForm">
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @*Create A PopUp Modal For DeleteConfirmation*@

    <div class="modal fade" id="DeleteConfirmation">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    <h4>Delete Student Record</h4>
                </div>
                <div class="modal-body">
                    @Html.HiddenFor(m=>m.Id)
                    <h4>Are You Sure? You Want To Delete This Record.</h4>
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-primary" data-dismiss="modal" id="r">Cancle</a>
                    <a href="#" class="btn btn-danger" onclick="ConfirmDelete()">Confirm</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
<script>

    function deleteUser(id) {
        $("#Id").val(id);
        $("#DeleteConfirmation").modal("show");
    }
    function ShowUserDetails(id)
    {
        var url = "/AdminAccount/ShowUserDetails?id=" + id;
        window.location.href = url; 
    }
    
    var ConfirmDelete = function ()
    {
        var id = $("#Id").val();

        alert(id);
        $.ajax({
            type: "POST",
            url: "/AdminAccount/DeleteUser?id=" + id,
            success: function (result) {
                $("#DeleteConfirmation").modal("hide");
                LoadList();
            }
        })
    }

    var LoadList = function ()
    {

            var searchText = $("#Search").val().toLowerCase();
            var searchBy = $("#SearchBy").val();

            var setData = $("#list");
            setData.html("");

            $.ajax({
                type: "POST",
                url: '@Url.Action("GetSearchingData", "AdminAccount")',
                data: { searchBy: searchBy, searchText: searchText },
                dataType: "json",
                type: "post",
                success: function (result) {

                    if (result.length == 0) {

                    }
                    else {
                        $.each(result, function (index, value) {
                            var Data = "<tr>" +
                                "<td>" +

                                "</td>" +
                                "<td>" +
                                value.FirstName +
                                "</td>" +
                                "<td>" +
                                value.LastName +
                                "</td>" +
                                "<td>" +
                                value.Email +
                                "</td>" +
                                "<td>" +
                                value.Age +
                                "</td>" +
                                "<td>" +
                                value.Gender +
                                "</td>" +
                                "<td>" +
                                value.Type +
                                "</td>" +
                                "<td>" + "<a href='#' class='btn btn-warning' onclick='ShowUserDetails(" + value.Id + ")' ><span class='glyphicon glyphicon-edit'></span></a>" + "</td>" +
                                "<td>" + "<a href='#' class='btn btn-danger' onclick='deleteUser(" + value.Id + ")'><span class='glyphicon glyphicon-trash'></span></a>" + "</td>" +
                                "</tr>";
                            setData.append(Data);

                        });
                    }
                }
            });
    }

    $(document).ready(function ()
    {
        LoadList();
        function Contains(text1, text2) {
            if (text1.indexOf(text2) != -1) return true;
        }
        $("#Search").keyup(LoadList);
    });
</script>
    
    
}





