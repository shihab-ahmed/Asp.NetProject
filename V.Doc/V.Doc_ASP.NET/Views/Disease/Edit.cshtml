@model V.Doc_ASP.NET.Models.CustomModel.DiseaseModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4>DiseaseModel</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
    
            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-10">
                    @Html.DisplayName("Diseases")
                    <ol>
                        @for (int i = 0; i < Model.SymptomModel.Count; i++)
                        {
                            <li>
                                @Html.CheckBoxFor(x => Model.SymptomModel[i].isSelected)
                                @Html.DisplayFor(x => Model.SymptomModel[i].Name)
                                @Html.HiddenFor(x => Model.SymptomModel[i].id)
                                @Html.HiddenFor(x => Model.SymptomModel[i].Name)
                            </li>
                        }

                    </ol>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.DisplayName("Specialist")
                    <ol>
                        @for (int i = 0; i < Model.MedicineModel.Count; i++)
                        {
                            <li>
                                @Html.CheckBoxFor(x => Model.MedicineModel[i].isSelected)
                                @Html.DisplayFor(x => Model.MedicineModel[i].Name)
                                @Html.DisplayFor(x => Model.MedicineModel[i].Type)
                                @Html.HiddenFor(x => Model.MedicineModel[i].id)
                                @Html.HiddenFor(x => Model.MedicineModel[i].Name)
                            </li>
                        }

                    </ol>
                </div>
            </div>
            <div class="form-control">
                @Html.DisplayFor(x => x.NotifyStatus)
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
    <div>
        @Html.ActionLink("Back to List", "List")
    </div>
</body>
</html>
