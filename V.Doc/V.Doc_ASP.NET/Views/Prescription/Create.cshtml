@model V.Doc_ASP.NET.Models.CustomModel.PrescriptionModel

@{
    
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>PrescriptionModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(x=>x.PatientId)
        @Html.HiddenFor(x => x.DoctorId)
        <div class="form-group">
            <div>
                @Html.DisplayFor(model => model.SelectedName)
                @Html.DisplayFor(model => model.TimeCreated)
            </div>
            <div>
                @Html.DisplayFor(model => model.Title)
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Details, new { htmlAttributes = new { @class = "form-control" ,cols="80", @rows="10" ,width="500px",height="500px"} })
                @Html.ValidationMessageFor(model => model.Details, "", new { @class = "text-danger" })
            </div>
        </div>

        <div>
            @Html.DisplayFor(x=>x.NotifyUpdate)
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>