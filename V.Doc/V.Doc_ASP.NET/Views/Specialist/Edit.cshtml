@model V.Doc_ASP.NET.Models.CustomModel.SpecialistModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/Admin_MainLayout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>SpecialistModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Type, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })

                <label id="UnameLabel">
                    @{
                        if (@Model.NameExistStatus != null)
                        {
                            @Model.NameExistStatus
                        }
                    }

                </label>
            </div>
        </div>

        <div class="form-group">
            @Html.DisplayFor(model => model.NotifyStatus)
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "SpecialistFromAdminSite")
</div>
